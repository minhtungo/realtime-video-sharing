{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "typeRoots": ["./src/common/types"],
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "importsNotUsedAsValues": "remove",
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
